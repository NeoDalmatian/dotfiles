# dual monitor setup using Arandr (cat saved file and copy it here) // sleep 2 becouse refreshing fixes black screen on laptop
# main monitor is eDP-1 (laptop monitor)
exec --no-startup-id sleep 0.5 && xrandr --output eDP-1 --primary --mode 1920x1080 --pos 1920x0 --rotate normal --output HDMI-1-1 --mode 1920x1080 --pos 0x0 --rotate normal --output eDP-1-2 --off
# main monitor is HDMI-1-1 (second monitor)
#exec --no-startup-id sleep 1 && xrandr --output eDP-1 --mode 1920x1080 --pos 1920x0 --rotate normal --output HDMI-1-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output eDP-1-2 --off

# open google-chrome
bindsym $mod+c exec --no-startup-id google-chrome-stable

# interactive screenshot by pressing printscreen
bindsym Print exec --no-startup-id gnome-screenshot -i

# calculator by pressing fn+f12
bindsym XF86Calculator exec --no-startup-id gnome-calculator

# main monitor brightness constol (scaling)
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl --quiet set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --quiet set 5%-

# second monitor brightness control (toggle 0% - 30%)
bindsym $mod+i exec --no-startup-id ddcutil --display 1 setvcp 10 0 --sleep-multiplier 0.1
bindsym $mod+o exec --no-startup-id ddcutil --display 1 setvcp 10 30 --sleep-multiplier 0.1

# disable screen saver
exec --no-startup-id xset -dpms
exec --no-startup-id xset s off

# background wallpaper (wait 2 sec because of bugs)
exec --no-startup-id sleep 1 && feh --bg-scale ~/Pictures/Wallpapers/linux-retro-alt.jpg

# transparency
# picom --experimental-backends for blurring (newer fork from compton)
exec --no-startup-id picom --experimental-backends 
# exec --no-startup-id compton (older version, doesnt allow blurring)

